@model TestPersonne.DAL.Personne

@{
	ViewBag.Title = "AddPersonne";
}
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Add Personne</h4>
		<hr />
		@Html.ValidationSummary(true)

		<div class="form-group">
			@Html.LabelFor(model => model.Nom, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Nom)
				@Html.ValidationMessageFor(model => model.Nom)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Prenom, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Prenom)
				@Html.ValidationMessageFor(model => model.Prenom)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DateNaissance, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.DateNaissance)
				@Html.ValidationMessageFor(model => model.DateNaissance)
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to Personne List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}